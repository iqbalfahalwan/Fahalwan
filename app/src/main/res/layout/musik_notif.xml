<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="64dp"
     android:layout_width="match_parent"
     android:background="#FF1976D2"
     android:padding="8dp">

    <ImageView
         android:layout_height="48dp"
         android:layout_width="48dp"
         android:src="@drawable/ic_musik"
         android:scaleType="centerCrop"
         android:layout_centerVertical="true"
         android:layout_alignParentLeft="true"
         android:id="@+id/album_art" />

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_centerVertical="true"
         android:layout_toLeftOf="@id/controls_container"
         android:orientation="vertical"
         android:layout_toRightOf="@id/album_art"
         android:layout_marginLeft="12dp"
         android:layout_marginRight="12dp"
         android:id="@+id/text_container">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:ellipsize="marquee"
             android:textSize="14sp"
             android:textColor="#FFFFFF"
             android:singleLine="true"
             android:id="@+id/nama"
             android:text="Judul Lagu"
             android:textStyle="bold" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:ellipsize="end"
             android:textSize="12sp"
             android:textColor="#B3FFFFFF"
             android:singleLine="true"
             android:id="@+id/artist"
             android:text="Artist" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_centerVertical="true"
         android:orientation="horizontal"
         android:layout_alignParentRight="true"
         android:id="@+id/controls_container">

        <ImageView
             android:layout_height="32dp"
             android:layout_width="32dp"
             android:src="@drawable/sebelum"
             android:scaleType="centerInside"
             android:background="?android:attr/selectableItemBackgroundBorderless"
             android:padding="4dp"
             android:layout_marginRight="4dp"
             android:id="@+id/prev" />

        <ImageView
             android:layout_height="36dp"
             android:layout_width="36dp"
             android:src="@drawable/play"
             android:scaleType="centerInside"
             android:background="?android:attr/selectableItemBackgroundBorderless"
             android:padding="4dp"
             android:layout_marginRight="4dp"
             android:id="@+id/stop_play" />

        <ImageView
             android:layout_height="32dp"
             android:layout_width="32dp"
             android:src="@drawable/sesudah"
             android:scaleType="centerInside"
             android:background="?android:attr/selectableItemBackgroundBorderless"
             android:padding="4dp"
             android:id="@+id/next" />

    </LinearLayout>

</RelativeLayout>